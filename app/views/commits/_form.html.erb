<%= simple_form_for @commit, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :url %>
  <%= f.input :sha %>
  <%= f.input :author_name %>
  <%= f.input :author_email %>
  <%= f.input :date %>
  <%= f.input :message %>
  <%= f.input :task_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                commits_path, :class => 'btn' %>
  </div>
<% end %>
