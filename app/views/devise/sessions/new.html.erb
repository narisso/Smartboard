<%= devise_error_messages! %>
<div class="page-header">
<h1>Sign in</h1>
</div>
<%= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }  do |f| %>
 <div class="control-group">
         <%= f.label :email , :class => 'control-label'%>
         <div class="controls">
                 <%= f.email_field :email, :autofocus => true , :class => 'text_field'  %>
         </div>
 </div>

 <div class="control-group">
         <%= f.label :password, :class => 'control-label' %>
         <div class="controls">
                 <%= f.password_field :password, :class => 'text_field' %>
         </div>
 </div>


 <% if devise_mapping.rememberable? -%>
         <div class="control-group">
                  <%= f.label :remember_me , :class => 'control-label'%>
                  <div class="controls">
                   <%= f.check_box :remember_me, :class => 'checkbox'%>
               </div>
   </div>
 <% end -%>

  <div class="form-actions">
          <%= f.submit "Sign in", :class => 'btn btn-primary'  %>
          <%= link_to "Google Login", user_omniauth_authorize_path(:google_oauth2), :class => 'btn'  %>
          <%= link_to "Facebook Login", user_omniauth_authorize_path(:facebook), :class => 'btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
