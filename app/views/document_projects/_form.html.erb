<%- model_class = DocumentProject -%>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h1>Upload Document</h1>
    <% if @document_project.project.dropbox_token == nil %>
      <span class="label label-warning"><strong>Warning!</strong> You need to link this project to Dropbox to be able to upload files.</span>
    <% end %>
</div>
<%= bootstrap_flash %>
<%= simple_form_for [@document_project.project, @document_project], :html => { :class => 'form-horizontal',:multipart => true }, :remote => true do |f| %>
<div class="modal-body">
  <%= f.input :name %>
  <%= f.input :file, as: :file %>
  <%= f.input :description, :input_html => { :cols => 50, :rows => 3 } %>
 </div>
 <div class="modal-footer">
    <%= f.button :submit,'Upload', :class => 'btn-primary' %>
    <%= link_to 'Back', project_document_projects_path(@document_project.project), :class => 'btn', :remote => true %>
  </div>
<% end %>
