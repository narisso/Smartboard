<%= simple_form_for [@document_project.project, @document_project], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :url_path %>
  <%= f.input :description %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                project_document_projects_path(@document_project.project), :class => 'btn' %>
  </div>
<% end %>
