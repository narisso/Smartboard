<%- model_class = DocumentUseCase -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @document_use_case.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @document_use_case.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:use_case_id) %>:</strong></dt>
  <dd><%= @document_use_case.use_case_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:url_path) %>:</strong></dt>
  <dd><%= @document_use_case.url_path %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              document_use_cases_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_document_use_case_path(@document_use_case), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              document_use_case_path(@document_use_case),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
