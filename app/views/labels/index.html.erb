<%- model_class = Label -%>
<div class="page-header" style="margin-left:50px;">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped" style="margin-left:50px;">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th ><%= model_class.human_attribute_name(:color) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @labels.each do |label| %>
      <tr>

        <td><%= label.name %></td>
        <td style="background-color:<%=label.color%>;"></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_project_label_path(@project,label), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      project_label_path(@project,label),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New Label",
            new_project_label_path(@project),
            :class => 'btn btn-primary',:data => {:toggle => "modal", :remote => true, :target => '#modal'},:style =>"margin-left:50px;margin-bottom:30px;" %>
