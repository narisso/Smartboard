<%= simple_form_for @project_role_user, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :role, :include_blank => false %>
  <%= f.association :user, :include_blank => false, :label_method => :email %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                project_role_users_path, :class => 'btn' %>
  </div>
<% end %>
