<%- model_class = ProjectRoleUser -%>
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  		<h1>Add User</h1>
  	</div>
  	<div class="modal-body">
  		<table class="table table-striped">
  			<thead>
    			<tr>
    				<th>User</th>
    				<th>Role</th>
    			</tr>
    		</thead>
    		<tbody>
    			<% @users.each do |u| %>
    			<tr>
    				<td><%= u.email %></td>
    				<td><%= @project.get_role(u) %></td>
    			</tr>
    			<% end %>
    		</tbody>
    	</table>
  	</div>
  	<div class="modal-body">
		<%= simple_form_for @project_role_user, :html => { :class => 'form-horizontal' } do |f| %>
		  <%= f.association :role, :include_blank => false %>
		  <%= f.association :user, :include_blank => false, :label_method => :email %>
		  <%= f.button :submit, 'Add user', :class => 'btn-primary' %>
		  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), project_role_users_path, :class => 'btn', :data => {:dismiss => "modal"} %>
	</div>

		<% end %>
  		
  	

