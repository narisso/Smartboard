<%= simple_form_for @project, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :initial_date %>
  <% if not @project.created_at.nil?%>
    <%= f.association :project_status, :include_blank => false %>
  <% end %>
  <button class="btn">Link to Dropbox</button>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projects_path, :class => 'btn' %>
  </div>
<% end %>
