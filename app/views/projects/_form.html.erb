<%= simple_form_for @project, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :initial_date, :as => :string %>
  <%= f.input :description %>
  <% if not @project.created_at.nil?%>
    <%= f.association :project_status, :include_blank => false %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projects_path, :class => 'btn' %>
  </div>
<% end %>

<% content_for :javascripts do %>
  <script type="text/javascript">
    $('#project_initial_date').datepicker();
  </script>
<% end %>
