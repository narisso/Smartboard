{
	"name": "Use Cases",
	"children": [
		<% @project.use_case_groups.each_with_index do |group, gindex| %>
		{
		"name": "<%= group.name %>",
		"children": [
			<% group.use_cases.each_with_index do |use_case, usindex| %>
			{"name": "<%= use_case.name %>",
			 "children": [
			 	<% use_case.requirements.each_with_index do |requirement, rindex| %>
			 	{"name": "<%= requirement.name %>", "size": 1}<%= rindex < use_case.requirements.count - 1 ? "," : "" %>
			 	<% end %>
			 ]}<%= usindex < group.use_cases.count - 1 ? "," : "" %>
			<% end %>
		]
		}<%= gindex < @project.use_case_groups.count - 1 ? "," : "" %>
		<% end %>
	]
}