<%- model_class = RequirementTemplate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @requirement_template.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:template_form) %>:</strong></dt>
  <dd><%= @requirement_template.template_form %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              requirement_templates_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_requirement_template_path(@requirement_template), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              requirement_template_path(@requirement_template),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
