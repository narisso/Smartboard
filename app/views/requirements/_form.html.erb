<%= simple_form_for @requirement, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :type %>
  <%= f.input :data %>
  <%= f.input :template_id %>
  <%= f.input :use_case_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                requirements_path, :class => 'btn' %>
  </div>
<% end %>
