<%= simple_form_for [@project, @status] , :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :order,  :input_html =>{ :value => 1 } %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                boards_project_path(@project), :class => 'btn' %>
  </div>
<% end %>
