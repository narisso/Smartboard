<%- model_class = ProjectRoleUser -%>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      
      <h1>Task</h1>

  </div>
  <%= bootstrap_flash %>


<%= simple_form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="modal-body">
  <%= f.input :name %>
  <%= f.input :description, :as => :text, :input_html => { :cols => 30, :rows => 4 } %>
  <%= f.association :label, :include_blank => false %>
  <%= f.input :priority, collection: 1..5, :include_blank => false %>
  <%= f.input :project_id, input_html: {value: params[:pr_id]}, :as => :hidden %>
  <%= f.association :users,
                    :collection => User.all,
                    :label_method => :email,
                    :include_blank => true,
                    :input_html => { class: 'chosen-select' } %>
  <% if !@editing %>
    <%= f.input :status_id, input_html: {value: params[:status_id]}, :as => :hidden %>
  <% else %>
    <%= f.input :status_id, collection: Status.where(:project_id => params[:pr_id]), :include_blank => false %>
   <% end %> 
  </div>
  <div class="modal-footer">
    <%= f.button :submit, :class => 'btn-primary'%>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), boards_project_path(params[:pr_id]), :class => 'btn' %>
  </div>
<% end %>
