<%- model_class = Task -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @task.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @task.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:task_father_id) %>:</strong></dt>
  <dd><%= @task.task_father_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @task.type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status_update_at) %>:</strong></dt>
  <dd><%= @task.status_update_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_id) %>:</strong></dt>
  <dd><%= @task.project_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status_id) %>:</strong></dt>
  <dd><%= @task.status_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:requirement_id) %>:</strong></dt>
  <dd><%= @task.requirement_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:label_id) %>:</strong></dt>
  <dd><%= @task.label_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:estimated_hours) %>:</strong></dt>
  <dd><%= @task.estimated_hours %></dd>
  <dt><strong><%= model_class.human_attribute_name(:effective_hours) %>:</strong></dt>
  <dd><%= @task.effective_hours %></dd>
  <dt><strong><%= model_class.human_attribute_name(:priority) %>:</strong></dt>
  <dd><%= @task.priority %></dd>
  <dt><strong><%= model_class.human_attribute_name(:goal_id) %>:</strong></dt>
  <dd><%= @task.goal_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:task_depend_id) %>:</strong></dt>
  <dd><%= @task.task_depend_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              tasks_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_task_path(@task), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              task_path(@task),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
