<%= simple_form_for @use_case, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :actors %>
  <%= f.input :synopsis %>
  <%= f.input :project_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                use_cases_path, :class => 'btn' %>
  </div>
<% end %>
