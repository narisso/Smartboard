<%= simple_form_for(@bug) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :user_id %>
    <%= f.input :project_id %>
    <%= f.input :test_case_id %>
    <%= f.input :task_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
