<%= simple_form_for(@commit) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :url %>
    <%= f.input :sha %>
    <%= f.input :author_name %>
    <%= f.input :author_email %>
    <%= f.input :date %>
    <%= f.input :message %>
    <%= f.input :task_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
