<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Task father</th>
    <th>Type</th>
    <th>Status update at</th>
    <th>Project</th>
    <th>Status</th>
    <th>Requirement</th>
    <th>Label</th>
    <th>Estimated hours</th>
    <th>Effective hours</th>
    <th>Priority</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= task.task_father %></td>
    <td><%= task.type %></td>
    <td><%= task.status_update_at %></td>
    <td><%= task.project_id %></td>
    <td><%= task.status_id %></td>
    <td><%= task.requirement_id %></td>
    <td><%= task.label_id %></td>
    <td><%= task.estimated_hours %></td>
    <td><%= task.effective_hours %></td>
    <td><%= task.priority %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

