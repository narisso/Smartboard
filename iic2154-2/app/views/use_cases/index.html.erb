<h1>Listing use_cases</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Actors</th>
    <th>Synopsis</th>
    <th>Project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @use_cases.each do |use_case| %>
  <tr>
    <td><%= use_case.name %></td>
    <td><%= use_case.actors %></td>
    <td><%= use_case.synopsis %></td>
    <td><%= use_case.project_id %></td>
    <td><%= link_to 'Show', use_case %></td>
    <td><%= link_to 'Edit', edit_use_case_path(use_case) %></td>
    <td><%= link_to 'Destroy', use_case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

